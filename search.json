---
layout: null
---
[
  {% for doc in site.posts %}
    {
      "title"    : "{{ doc.title | escape }}",
      "category" : "{{ doc.category }}",
      "tags"     : "{{ doc.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ doc.url }}",
      "date"     : "{{ doc.date }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
